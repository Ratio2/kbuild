define TOOL_CLANGXX_LINK_SYSMOD_CMDS
	$(QUIET)$(APPEND) -tn "$(outbase).rsp" $(filter-out %.gch,$(objs))
	$(QUIET)$(TOOL_CLANGXX_LD_SYSMOD) $(TOOL_CLANGXX_LDFLAGS.sysmod) $(flags) -o "$(out)"\
