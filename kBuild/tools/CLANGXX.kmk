## Link library
# @param    $(target)   Normalized main target name.
# @param    $(out)      Library name.
# @param    $(objs)     Object files to put in the library.
# @param    $(flags)    Flags.
# @param    $(dirdep)   Directory creation dependency.
# @param    $(deps)     Other dependencies.
# @param    $(othersrc) Unhandled sources.
# @param    $(outbase)  Output basename (full). Use this for list files and such.
# @note llvm-ar has MRI script support since 10.0.0 judging from the man page.
TOOL_CLANGXX_LINK_LIBRARY_OUTPUT_MAYBE_PRECIOUS = $(outbase).ar-script
TOOL_CLANGXX_LINK_LIBRARY_OUTPUT =
TOOL_CLANGXX_LINK_LIBRARY_DEPEND = $(othersrc)
TOOL_CLANGXX_LINK_LIBRARY_DEPORD =
define TOOL_CLANGXX_LINK_LIBRARY_CMDS
	$(QUIET)$(APPEND) -t $(out).ar-script 'CREATE $(out)'
	$(QUIET)$(APPEND) -n $(out).ar-script \
		$(foreach o,$(filter-out %.gch,$(objs)), 'ADDMOD $(o)') \
		$(foreach o,$(filter-out %.def %.imp %.dll,$(othersrc)), 'ADDLIB $(o)')
	$(if $(filter %.def %.imp %.dll,$(othersrc))\
		,$(TOOL_CLANGXX_AR_IMP) -o $(outbase).imp.a $(filter %.def %.imp %.dll,$(othersrc))\
		$(NL)$(TAB)$(QUIET)$(APPEND) $(out).ar-script 'ADDLIB $(outbase).imp.a')
	$(QUIET)$(APPEND) $(out).ar-script 'SAVE'
	$(QUIET)$(APPEND) $(out).ar-script 'END'
	$(QUIET)$(REDIRECT) -rti $(out).ar-script -- $(TOOL_CLANGXX_AR) -M
endef


## Link program
# @param    $(target)   Normalized main target name.
# @param    $(out)      Program name.
# @param    $(objs)     Object files to link together.
# @param    $(libs)     Libraries to search.
# @param    $(libpath)  Library search paths.
# @param    $(flags)    Flags.
# @param    $(dirdep)   Directory creation dependency.
# @param    $(deps)     Other dependencies.
# @param    $(othersrc) Unhandled sources.
# @param    $(custom_pre)   Custom step invoked before linking.
# @param    $(custom_post)  Custom step invoked after linking.
# @param    $(outbase)  Output basename (full). Use this for list files and such.
TOOL_CLANGXX_LINK_PROGRAM_OUTPUT_MAYBE_PRECIOUS = $(outbase).rsp
TOOL_CLANGXX_LINK_PROGRAM_OUTPUT_MAYBE = $(outbase).map
TOOL_CLANGXX_LINK_PROGRAM_OUTPUT_DEBUG = $(TOOL_CLANGXX_OUTPUT_DEBUG)
TOOL_CLANGXX_LINK_PROGRAM_DEBUG_INSTALL_FN = $(TOOL_CLANGXX_DEBUG_INSTALL_FN)
TOOL_CLANGXX_LINK_PROGRAM_DEPEND = $(qforeachfile ,lib,$(libs),$(if-expr "$(qnotdir ,$(lib))" != "$(lib)",$(lib)))
TOOL_CLANGXX_LINK_PROGRAM_DEPORD =
define TOOL_CLANGXX_LINK_PROGRAM_CMDS
	$(QUIET)$(APPEND) -tn "$(outbase).rsp" $(filter-out %.gch,$(objs))
	$(QUIET)$(TOOL_CLANGXX_LD) $(flags) -o "$(out)"\
		@"$(outbase).rsp"\
		$(qaddprefix sh,-L,$(libpath))\
		$(qforeachfile ,lib,$(libs),$(if-expr "$(qnotdir ,$(lib))" != "$(lib)",$(lib), -l$(quote-sh $(patsubst lib%,%,$(lib)))))
 ifeq ($(ld_debug),split)
	$(QUIET)$(TOOL_CLANGXX_DSYMUTIL) -o "$(out).dSYM/" "$(out)"
	$(QUIET)$(TOOL_CLANGXX_STRIP_PROGRAM) "$(out)"
 endif
endef


## Link DLL
# @param    $(target)   Normalized main target name.
# @param    $(out)      Program name.
# @param    $(objs)     Object files to link together.
# @param    $(libs)     Libraries to search.
# @param    $(libpath)  Library search paths.
# @param    $(flags)    Flags.
# @param    $(dirdep)   Directory creation dependency.
# @param    $(deps)     Other dependencies.
# @param    $(othersrc) Unhandled sources.
# @param    $(custom_pre)   Custom step invoked before linking.
# @param    $(custom_post)  Custom step invoked after linking.
# @param    $(outbase)  Output basename (full). Use this for list files and such.
TOOL_CLANGXX_LINK_DLL_OUTPUT_MAYBE_PRECIOUS = $(outbase).rsp
TOOL_CLANGXX_LINK_DLL_OUTPUT_MAYBE = $(outbase).map
TOOL_CLANGXX_LINK_DLL_OUTPUT_DEBUG = $(TOOL_CLANGXX_OUTPUT_DEBUG)
TOOL_CLANGXX_LINK_DLL_DEBUG_INSTALL_FN = $(TOOL_CLANGXX_DEBUG_INSTALL_FN)
TOOL_CLANGXX_LINK_DLL_DEPEND = $(qforeachfile ,lib,$(libs),$(if-expr "$(qnotdir ,$(lib))" != "$(lib)",$(lib)))
TOOL_CLANGXX_LINK_DLL_DEPORD =
define TOOL_CLANGXX_LINK_DLL_CMDS
	$(QUIET)$(APPEND) -tn $(outbase).rsp $(filter-out %.gch,$(objs))
	$(QUIET)$(TOOL_CLANGXX_LD) $(TOOL_CLANGXX_LDFLAGS.dll) $(flags) -o "$(out)"\
		$(if-expr "$(bld_trg)" != "darwin" && "$(bld_trg)" != "win" && "$(bld_trg)" != "os2" \
		,-Wl$(COMMA)-soname=$(firstword $($(target)_SONAME.$(bld_trg).$(bld_type)) $($(target)_SONAME.$(bld_trg)) $($(target)_SONAME.$(bld_type)) $($(target)_SONAME) $(notdir $(out))))\
		@"$(outbase).rsp"\
		$(qaddprefix sh,-L,$(libpath))\
		$(qforeachfile ,lib,$(libs),$(if-expr "$(qnotdir ,$(lib))" != "$(lib)",$(lib), -l$(quote-sh $(patsubst lib%,%,$(lib)))))
 ifeq ($(ld_debug),split)
  ifeq ($(bld_trg),darwin)
	$(QUIET)$(TOOL_CLANGXX_DSYMUTIL) -o "$(out).dSYM/" "$(out)"
	$(QUIET)$(TOOL_CLANGXX_STRIP_DLL) "$(out)"
  else
  endif
 endif
endef


