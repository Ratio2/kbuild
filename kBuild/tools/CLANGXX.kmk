if1of ($(KBUILD_HOST), darwin)
 ifndef INCLUDED_DARWIN_COMMON_KMK
  include $(KBUILD_PATH)/darwin-common.kmk
 endif
endif

TOOL_CLANGXX := Generic LLVM Clang, for building C++ code for the default target.

# Tool Specific Properties
# PREFIX/SUFFIX: clang;   PREFIX2/SUFFIX2: cctool;
ifndef PATH_TOOL_CLANGXX
 ifeq ($(KBUILD_HOST),darwin)
  PATH_TOOL_CLANGXX := $(substr $(firstfile $(foreachfile toolchaindir, $(DARWINCMN_TOOLCHAIN_DIRS) \
  	, $(qwildcard ,$(toolchaindir)/usr/bin/clang++))), 1, -12)
 ## @todo else
 endif
else
 PATH_TOOL_CLANGXX := $(PATH_TOOL_CLANGXX)
endif
ifndef TOOL_CLANGXX_PREFIX
 ifdef PATH_TOOL_CLANGXX
  TOOL_CLANGXX_PREFIX  := $(PATH_TOOL_CLANGXX)/bin/
 else
  TOOL_CLANGXX_PREFIX  :=
 endif
endif
ifndef TOOL_CLANGXX_SUFFIX
 TOOL_CLANGXX_SUFFIX   := $(HOSTSUFF_EXE)
endif
TOOL_CLANGXX_PREFIX2   ?= $(TOOL_CLANGXX_PREFIX)llvm-
TOOL_CLANGXX_SUFFIX2   ?= $(TOOL_CLANGXX_SUFFIX)
TOOL_CLANGXX_CC        ?= $(TOOL_CLANGXX_PREFIX)clang$(TOOL_CLANGXX_SUFFIX)
TOOL_CLANGXX_CXX       ?= $(TOOL_CLANGXX_PREFIX)clang++$(TOOL_CLANGXX_SUFFIX)
TOOL_CLANGXX_PCH       ?= $(TOOL_CLANGXX_CXX)
TOOL_CLANGXX_OBJC      ?= $(TOOL_CLANGXX_PREFIX)clang$(TOOL_CLANGXX_SUFFIX)
TOOL_CLANGXX_OBJCXX    ?= $(TOOL_CLANGXX_PREFIX)clang$(TOOL_CLANGXX_SUFFIX)
TOOL_CLANGXX_AS        ?= $(TOOL_CLANGXX_PREFIX)clang$(TOOL_CLANGXX_SUFFIX)
TOOL_CLANGXX_LD        ?= $(TOOL_CLANGXX_PREFIX)clang++$(TOOL_CLANGXX_SUFFIX)
TOOL_CLANGXX_LD_SYSMOD ?= $(TOOL_CLANGXX_PREFIX)clang++$(TOOL_CLANGXX_SUFFIX)
TOOL_CLANGXX_LDFLAGS.dll       ?= $(if-expr "$(bld_trg)" == "darwin",-dynamiclib,-shared)
TOOL_CLANGXX_LDFLAGS.sysmod    ?= -r
TOOL_CLANGXX_DSYMUTIL  ?= $(TOOL_CLANGXX_PREFIX)dsymutil$(TOOL_CLANGXX_SUFFIX)

TOOL_CLANGXX_AR        ?= $(TOOL_CLANGXX_PREFIX2)ar$(TOOL_CLANGXX_SUFFIX2)
TOOL_CLANGXX_AR_IMP    ?= $(TOOL_CLANGXX_PREFIX2)todo-ar-imp$(TOOL_CLANGXX_SUFFIX2)
TOOL_CLANGXX_STRIP     ?= $(TOOL_CLANGXX_PREFIX2)strip$(TOOL_CLANGXX_SUFFIX2)
TOOL_CLANGXX_STRIP_PROGRAM ?= $(TOOL_CLANGXX_STRIP) -SXxru
TOOL_CLANGXX_STRIP_DLL     ?= $(TOOL_CLANGXX_STRIP) -Sxru
TOOL_CLANGXX_STRIP_SYSMOD  ?= $(TOOL_CLANGXX_STRIP) -Sru

# General Properties used by kBuild
TOOL_CLANGXX_COBJSUFF         ?= .o
TOOL_CLANGXX_CFLAGS           ?=
TOOL_CLANGXX_CFLAGS.debug     ?= -g
TOOL_CLANGXX_CFLAGS.profile   ?= -O2 #-g -pg
TOOL_CLANGXX_CFLAGS.release   ?= -O2
TOOL_CLANGXX_CINCS            ?=
TOOL_CLANGXX_CDEFS            ?=

TOOL_CLANGXX_CXXOBJSUFF       ?= .o
TOOL_CLANGXX_CXXFLAGS         ?=
TOOL_CLANGXX_CXXFLAGS.debug   ?= -g
TOOL_CLANGXX_CXXFLAGS.profile ?= -O2 #-g -pg
TOOL_CLANGXX_CXXFLAGS.release ?= -O2
TOOL_CLANGXX_CXXINCS          ?=
TOOL_CLANGXX_CXXDEFS          ?=

TOOL_CLANGXX_PCHOBJSUFF       ?= .h.gch
TOOL_CLANGXX_PCHFLAGS         ?= $(TOOL_CLANGXX_CXXFLAGS) -x c++-header # HACK ALERT! We should use .hpp as input! 18.0.0 complains.
TOOL_CLANGXX_PCHFLAGS.debug   ?= $(TOOL_CLANGXX_CXXFLAGS.debug)
TOOL_CLANGXX_PCHFLAGS.profile ?= $(TOOL_CLANGXX_CXXFLAGS.profile)
TOOL_CLANGXX_PCHFLAGS.release ?= $(TOOL_CLANGXX_CXXFLAGS.release)
TOOL_CLANGXX_PCHINCS          ?= $(TOOL_CLANGXX_CXXINCS)
TOOL_CLANGXX_PCHDEFS          ?= $(TOOL_CLANGXX_CXXDEFS)

TOOL_CLANGXX_OBJCOBJSUFF      ?= .o
TOOL_CLANGXX_OBJCFLAGS        ?=
TOOL_CLANGXX_OBJCFLAGS.debug  ?= -g
TOOL_CLANGXX_OBJCFLAGS.profile?= -O2 #-g -pg
TOOL_CLANGXX_OBJCFLAGS.release?= -O2
TOOL_CLANGXX_OBJCINCS         ?=
TOOL_CLANGXX_OBJCDEFS         ?=

TOOL_CLANGXX_OBJCXXOBJSUFF        ?= .o
TOOL_CLANGXX_OBJCXXFLAGS          ?=
TOOL_CLANGXX_OBJCXXFLAGS.debug    ?= -g
TOOL_CLANGXX_OBJCXXFLAGS.profile  ?= -O2 #-g -pg
TOOL_CLANGXX_OBJCXXFLAGS.release  ?= -O2
TOOL_CLANGXX_OBJCXXINCS           ?=
TOOL_CLANGXX_OBJCXXDEFS           ?=

TOOL_CLANGXX_ASFLAGS          ?= -x assembler-with-cpp
TOOL_CLANGXX_ASFLAGS.debug    ?= -g
TOOL_CLANGXX_ASFLAGS.profile  ?= -g
TOOL_CLANGXX_ASOBJSUFF        ?= .o

TOOL_CLANGXX_ARFLAGS          ?= -c -rs
TOOL_CLANGXX_ARLIBSUFF        ?= .a

TOOL_CLANGXX_LDFLAGS          ?= -fuse-ld=lld$(TOOL_CLANGXX_SUFFIX2)
TOOL_CLANGXX_LDFLAGS.debug    ?= -g
TOOL_CLANGXX_LDFLAGS.profile  ?= -g



##
# Calculate the files in the debug bundle.
# @param    1  The whole output filename.
# @param    2  The output filename sans suffix.
TOOL_CLANGXX_OUTPUT_DEBUG = $(if-expr "$(bld_trg)" == "darwin" && "$(ld_debug)" == "split",\
    $(1).dSYM/Contents/Info.plist \
    $(1).dSYM/Contents/Resources/DWARF/$(notdir $(1)) \
    )

##
# Calculate the files in the debug bundle.
# @param    1  The whole linker output filename.
# @param    2  The linker output filename sans suffix.
# @param    3  The desired install name (no dir slash).
# @remarks  darwin: The Info.plist has some reference to the original name, but
#           gdb does not care and only check for a symbol file in the DWARF
#           directory with the same name as the debugged module.
TOOL_CLANGXX_DEBUG_INSTALL_FN = $(if-expr "$(bld_trg)" == "darwin" && "$(ld_debug)" == "split",\
    $(3).dSYM/ \
    $(3).dSYM/Contents/ \
    $(3).dSYM/Contents/Resources/ \
    $(3).dSYM/Contents/Resources/DWARF/ \
    $(1).dSYM/Contents/Info.plist=>$(3).dSYM/Contents/Info.plist \
    $(1).dSYM/Contents/Resources/DWARF/$(notdir $(1))=>$(3).dSYM/Contents/Resources/DWARF/$(notdir $(3)) \
    )


## Compile C source.
# @param    $(target)   Normalized main target name.
# @param    $(source)   Source filename (relative).
# @param    $(obj)      Object file name. This shall be (re)created by the compilation.
# @param    $(dep)      Dependcy file. This shall be (re)created by the compilation.
# @param    $(flags)    Flags.
# @param    $(defs)     Definitions. No -D or something.
# @param    $(incs)     Includes. No -I or something.
# @param    $(dirdep)   Directory creation dependency.
# @param    $(deps)     Other dependencies.
# @param    $(outbase)  Output basename (full). Use this for list files and such.
# @param    $(objsuff)  Object suffix.
TOOL_CLANGXX_COMPILE_C_DEPEND =
TOOL_CLANGXX_COMPILE_C_DEPORD =
TOOL_CLANGXX_COMPILE_C_OUTPUT         = $(if-expr "$(use_objcache)" != "",$(outbase).i,)
TOOL_CLANGXX_COMPILE_C_USES_KOBJCACHE = $(if-expr "$(use_objcache)" != "",1,)
define TOOL_CLANGXX_COMPILE_C_CMDS
if "$(use_objcache)" != ""
	$(QUIET)$(KOBJCACHE) -f $(outbase).koc -d $(PATH_OBJCACHE) -t $(bld_trg).$(bld_trg_arch) -p\
		--kObjCache-cpp $(outbase).i\
		$(TOOL_CLANGXX_CC) -E -o -\
		$(flags) $(qaddprefix sh,-I, $(incs)) $(qaddprefix sh,-D, $(defs))\
		-Wp,-MD,$(dep) -Wp,-MT,$(obj) -Wp,-MP\
		$(abspath $(source))\
		--kObjCache-cc $(obj)\
		$(TOOL_CLANGXX_CC) -c\
		$(flags) -fpreprocessed -x c\
		-o $(obj)\
		-
else
	$(QUIET)$(TOOL_CLANGXX_CC) -c\
		$(flags) $(qaddprefix sh,-I, $(incs)) $(qaddprefix sh,-D, $(defs))\
		-Wp,-MD,$(dep) -Wp,-MT,$(obj) -Wp,-MP\
		-o $(obj)\
		$(abspath $(source))
endif
	$(QUIET)$(APPEND) -n "$(dep)" "" "$(source):" ""
endef


## Compile C++ source.
# @param    $(target)   Normalized main target name.
# @param    $(source)   Source filename (relative).
# @param    $(obj)      Object file name. This shall be (re)created by the compilation.
# @param    $(dep)      Dependcy file. This shall be (re)created by the compilation.
# @param    $(flags)    Flags.
# @param    $(defs)     Definitions. No -D or something.
# @param    $(incs)     Includes. No -I or something.
# @param    $(dirdep)   Directory creation dependency.
# @param    $(deps)     Other dependencies.
# @param    $(outbase)  Output basename (full). Use this for list files and such.
# @param    $(objsuff)  Object suffix.
TOOL_CLANGXX_COMPILE_CXX_OUTPUT         = $(if-expr "$(use_objcache)" != "",$(outbase).ii,)
TOOL_CLANGXX_COMPILE_CXX_DEPEND         = $($(target)_1_GCC_PCH_FILE)
TOOL_CLANGXX_COMPILE_CXX_DEPORD         =
TOOL_CLANGXX_COMPILE_CXX_USES_KOBJCACHE = $(if-expr "$(use_objcache)" != "",1,)
define TOOL_CLANGXX_COMPILE_CXX_CMDS
if "$(use_objcache)" != ""
	$(QUIET)$(KOBJCACHE) -f $(outbase).koc -d $(PATH_OBJCACHE) -t $(bld_trg).$(bld_trg_arch) -p\
		--kObjCache-cpp $(outbase).ii\
		$(TOOL_CLANGXX_CXX) -E -o - $(if-expr defined($(target)_PCH_HDR)\
		,-fpch-preprocess -Winvalid-pch -I$($(target)_1_GCC_PCH_DIR) -include $(basename $($(target)_1_GCC_PCH_FILE)),)\
		$(flags) $(qaddprefix sh,-I, $(incs)) $(qaddprefix sh,-D, $(defs))\
		-Wp,-MD,$(dep) -Wp,-MT,$(obj) -Wp,-MP\
		$(abspath $(source))\
		--kObjCache-cc $(obj)\
		$(TOOL_CLANGXX_CXX) -c\
		$(flags) -fpreprocessed $(if-expr defined($(target)_PCH_HDR),-fpch-preprocess,) -x c++\
		-o $(obj)\
		-
else
	$(QUIET)$(TOOL_CLANGXX_CXX) -c\
		$(flags) $(qaddprefix sh,-I, $($(target)_1_GCC_PCH_DIR) $(incs)) $(qaddprefix sh,-D, $(defs))\
		-Wp,-MD,$(dep) -Wp,-MT,$(obj) -Wp,-MP\
		-o $(obj) $(if-expr defined($(target)_PCH_HDR) \
		,-Winvalid-pch -include $(basename $($(target)_1_GCC_PCH_FILE)),) \
		$(abspath $(source))
endif
	$(QUIET)$(APPEND) -n "$(dep)" "" "$(source):" ""
endef


## Precompile C++ header.
# @param    $(target)   Normalized main target name.
# @param    $(source)   Source filename (relative).
# @param    $(obj)      Object file name. This shall be (re)created by the compilation.
# @param    $(dep)	    Dependcy file. This shall be (re)created by the compilation.
# @param    $(flags)    Flags.
# @param    $(defs)     Definitions. No -D or something.
# @param    $(incs)     Includes. No -I or something.
# @param    $(dirdep)   Directory creation dependency.
# @param    $(deps)		Other dependencies.
# @param    $(outbase)  Output basename (full). Use this for list files and such.
# @param    $(objsuff)  Object suffix.
TOOL_CLANGXX_COMPILE_PCH_OUTPUT = $($(target)_1_GCC_PCH_FILE)
TOOL_CLANGXX_COMPILE_PCH_DEPEND =
TOOL_CLANGXX_COMPILE_PCH_DEPORD = $($(target)_1_GCC_PCH_DIR)
define TOOL_CLANGXX_COMPILE_PCH_CMDS
	$(QUIET)$(TOOL_CLANGXX_PCH) -c\
		$(flags) $(qaddprefix sh,-I, $($(target)_1_GCC_PCH_DIR) $(incs)) $(qaddprefix sh,-D, $(defs))\
		-Wp,-MD,$(dep) -Wp,-MT,$(obj) -Wp,-MP\
		-o $(obj)\
		$(abspath $(source))
	$(INSTALL) --hard-link-files-when-possible -m 0644 -- "$(obj)" "$($(target)_1_GCC_PCH_FILE)"
	$(QUIET)$(APPEND) -n "$(dep)" "" "$(source):" ""
endef


